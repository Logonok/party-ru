</div>
<div class="front"
     data-guest="<%- _controller.user.isGuest() %>"
     data-user="<%- _controller.user.getId() %>"
     data-data-url="<%- dataUrl %>"
     data-meta-url="<%- metaUrl %>">

    <%- include('./_main') %>
    <%- include('./_member') %>
    <%- include('./_toast') %>
