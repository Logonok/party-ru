
<div class="page" data-page="member" data-handler="MemberPage">

    <div class="member loadable-container" data-handler="Member">

        <template data-id="member">
            <div class="page-head">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" data-action="main" data-t="">Домой</a></li>
                    <li class="breadcrumb-item" data-t="">Участник</li>
                </ol>
            </div>

            <h1>{{name}}</h1>

            <div class="tabs form-tabs mt-4" data-id="tabs">
                <div class="nav nav-tabs" role="tablist">
                    <a class="nav-item nav-link active" href="#" role="tab" data-id="toasts" data-t="">Тосты</a>
                    <a class="nav-item nav-link" href="#" role="tab" data-id="friends" data-t="">Друзья</a>
                </div>
                <div class="tab-content">
                    <div class="form-base-group tab-pane active" data-id="toasts">
                        <%- include('./_memberToasts') %>
                    </div>
                    <div class="form-base-group tab-pane" data-id="friends">
                        <%- include('./_memberFriends') %>
                    </div>
                </div>
            </div>
        </template>

        <template data-id="error">
            <div class="alert-danger alert">{{text}}</div>
        </template>

        <div class="loadable-content"></div>
        <div class="loader"><i class="fa fa-spinner fa-spin"></i></div>
    </div>
</div>